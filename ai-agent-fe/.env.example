# .env.example
# Firebase Client Config (Prefix with NEXT_PUBLIC_ to expose to browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-firebase-auth-domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-firebase-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=YOUR_MEASUREMENT_ID # Optional
# Firebase Admin SDK Config (Server-side only, NO NEXT_PUBLIC_ prefix)
FIREBASE_ADMIN_PROJECT_ID=your-firebase-project-id
FIREBASE_ADMIN_CLIENT_EMAIL=your-firebase-client-email
# IMPORTANT: Format the private key correctly for environment variables
# Replace literal newlines in the JSON key with '\\n'
FIREBASE_ADMIN_PRIVATE_KEY=your-firebase-admin-private-key
# ADK Integration Configuration
# Local ADK Agent URL (dev environment)
LOCAL_ADK_URL=http://127.0.0.1:8000
# Primary endpoint is "/run" for ADK web server
ADK_PRIMARY_ENDPOINT=/run
# Cloud Run ADK URL (production)
CLOUD_ADK_URL=your-cloud-run-adk-url
# Set to 'true' to use Cloud ADK, 'false' for local
USE_CLOUD_ADK=no
# URL where the frontend is deployed (used for internal API calls)
NEXT_PUBLIC_DEPLOY_URL=http://localhost:3000
# Auth control for ADK
# Set to 'true' to bypass authentication (useful for local testing)
# For Cloud Run, this may require the service to be deployed with --allow-unauthenticated
NO_ADK_AUTH=true
# Debug settings
DEBUG_ADK_INTEGRATION=true
# Add other environment variables as needed
GOOGLE_APPLICATION_CREDENTIALS_JSON=your-google-application-credentials-json